<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.get_a_ridemobileportal">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GetARideMobilePortal">
        <activity
            android:name=".driver.StartRideFragment"
            android:label="@string/title_activity_start_ride_fragment"
            android:theme="@style/Theme.GetARideMobilePortal.NoActionBar"></activity>
        <activity
            android:name=".driver.CompleteRideFragment"
            android:label="@string/title_activity_start_ride_fragment"
            android:theme="@style/Theme.GetARideMobilePortal.NoActionBar"></activity>
        <activity
            android:name=".dispatcher.DispatcherHomeActivity"
            android:label="Get-A-Ride"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".dispatcher.AssignDriverFragment"
            android:label="Get-A-Ride"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar" />
        <activity
            android:name=".driver.DriverHomeActivity"
            android:label="Get-A-Ride"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:noHistory="true"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar" />
        <activity
            android:name=".rider.HomeActivity"
            android:label="Get-A-Ride"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>